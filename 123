    <script>
        const ctx = document.getElementById('pathsChart').getContext('2d');
        const pathsChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: ['Рождение', 'Встреча с человеком', 'Испытания', 'Финал'],
                datasets: [{
                    label: 'Белый Клык (от дикости к цивилизации)',
                    data: [0, 1, 0.5, 3],
                    borderColor: '#FFA600',
                    backgroundColor: 'rgba(255, 166, 0, 0.2)',
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#FFA600',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#FFA600'
                }, {
                    label: ['Бэк, "Зов предков"', '(от цивилизации к дикости)'],
                    data: [3, 2.5, 1, 0],
                    borderColor: '#BC5090',
                    backgroundColor: 'rgba(188, 80, 144, 0.2)',
                    fill: true,
                    tension: 0.4,
                    pointBackgroundColor: '#BC5090',
                    pointBorderColor: '#fff',
                    pointHoverBackgroundColor: '#fff',
                    pointHoverBorderColor: '#BC5090'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            color: 'rgba(255, 255, 255, 0.7)',
                            font: {
                                weight: 'bold'
                            },
                            callback: function(value, index, values) {
                                const labels = {0: 'ДИКОСТЬ', 3: 'ЦИВИЛИЗАЦИЯ'};
                                return labels[value] || '';
                            }
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        }
                    },
                    x: {
                        ticks: {
                            color: 'rgba(255, 255, 255, 0.7)',
                             font: {
                                weight: 'bold'
                            }
                        },
                        grid: {
                            color: 'rgba(255, 255, 255, 0.1)'
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: {
                            color: 'rgba(255, 255, 255, 0.9)',
                            font: {
                                size: 14
                            },
                            boxWidth: 20
                        }
                    },
                    tooltip: {
                        backgroundColor: '#003F5C',
                        titleColor: '#FFA600',
                        bodyColor: '#FFFFFF',
                        borderColor: '#7A5195',
                        borderWidth: 1,
                        padding: 10,
                        callbacks: {
                            title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.datasets[item.datasetIndex].label;
                                if (Array.isArray(label)) {
                                  return label.join(' ');
                                } else {
                                  return label;
                                }
                            }
                        }
                    }
                }
            }
        });
    </script>

